              {%- if settings.social_youtube_link != blank -%}
                <a href="{{ settings.social_youtube_link }}" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="social-link social-link--youtube"
                   aria-label="YouTube">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M23.498 6.186C23.266 5.394 22.692 4.787 21.935 4.548C20.054 4 12 4 12 4S3.946 4 2.065 4.548C1.308 4.787 0.734 5.394 0.502 6.186C0 8.07 0 12 0 12S0 15.93 0.502 17.814C0.734 18.606 1.308 19.213 2.065 19.452C3.946 20 12 20 12 20S20.054 20 21.935 19.452C22.692 19.213 23.266 18.606 23.498 17.814C24 15.93 24 12 24 12S24 8.07 23.498 6.186ZM9.545 15.568V8.432L15.818 12L9.545 15.568Z"/>
                  </svg>
                </a>
              {%- endif -%}
              
              {%- if settings.social_tiktok_link != blank -%}
                <a href="{{ settings.social_tiktok_link }}" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="social-link social-link--tiktok"
                   aria-label="TikTok">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12.525.02C13.978.073 15.193.362 16.169.887C17.145 1.413 17.882 2.175 18.381 3.175C18.879 4.175 19.129 5.413 19.129 6.888V7.838C19.603 8.075 20.129 8.225 20.707 8.288C21.284 8.35 21.862 8.362 22.44 8.325V11.175C21.569 11.25 20.716 11.237 19.881 11.138C19.047 11.037 18.231 10.837 17.438 10.538V15.675C17.438 16.95 17.094 18.112 16.406 19.162C15.719 20.212 14.737 21.013 13.462 21.563C12.188 22.112 10.8 22.262 9.288 22.012C7.775 21.762 6.45 21.125 5.312 20.1C4.175 19.075 3.375 17.787 2.912 16.237C2.45 14.687 2.425 13.037 2.838 11.475C3.25 9.912 4.062 8.575 5.275 7.462C6.487 6.35 7.962 5.7 9.7 5.512V8.6C8.95 8.737 8.281 9.037 7.694 9.5C7.106 9.962 6.65 10.525 6.325 11.187C6 11.85 5.837 12.562 5.837 13.325C5.837 14.087 6 14.8 6.325 15.462C6.65 16.125 7.106 16.687 7.694 17.15C8.281 17.612 8.95 17.912 9.7 18.05C10.45 18.187 11.2 18.125 11.95 17.862C12.7 17.6 13.35 17.162 13.9 16.55C14.45 15.937 14.812 15.237 14.988 14.45C15.162 13.662 15.125 12.85 14.875 12.012V0H12.525V.02Z"/>
                  </svg>
                </a>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
      </div>

      {% comment %} Quick Links {% endcomment %}
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'link_list' -%}
            <div class="footer__section">
              {%- if block.settings.heading != blank -%}
                <h3 class="footer__title">{{ block.settings.heading }}</h3>
              {%- endif -%}
              {%- if linklists[block.settings.menu].links.size > 0 -%}
                <ul class="footer__links">
                  {%- for link in linklists[block.settings.menu].links -%}
                    <li>
                      <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>

          {%- when 'text' -%}
            <div class="footer__section">
              {%- if block.settings.heading != blank -%}
                <h3 class="footer__title">{{ block.settings.heading }}</h3>
              {%- endif -%}
              {%- if block.settings.subtext != blank -%}
                <div class="footer__text">{{ block.settings.subtext }}</div>
              {%- endif -%}
            </div>

          {%- when 'newsletter' -%}
            <div class="footer__section footer__section--newsletter">
              {%- if block.settings.heading != blank -%}
                <h3 class="footer__title">{{ block.settings.heading }}</h3>
              {%- endif -%}
              {%- if block.settings.subtext != blank -%}
                <p class="footer__newsletter-text">{{ block.settings.subtext }}</p>
              {%- endif -%}
              
              <form method="post" action="/contact#contact_form" id="contact_form" accept-charset="UTF-8" class="footer__newsletter-form">
                <input type="hidden" name="form_type" value="customer">
                <input type="hidden" name="utf8" value="✓">
                <input type="hidden" name="contact[tags]" value="newsletter">
                
                <div class="newsletter-form">
                  <input type="email" 
                         name="contact[email]" 
                         id="NewsletterForm--footer" 
                         class="newsletter-form__input"
                         value="{{ form.email }}"
                         aria-required="true"
                         autocorrect="off"
                         autocapitalize="off"
                         autocomplete="email"
                         placeholder="{{ 'newsletter.label' | t | default: 'Your email address' }}"
                         required>
                  <button type="submit" class="newsletter-form__button btn btn--primary" name="commit" aria-label="{{ 'newsletter.button_label' | t | default: 'Subscribe' }}">
                    {{ block.settings.button_text | default: 'Subscribe' }}
                  </button>
                </div>
              </form>

              {%- if form.posted_successfully? -%}
                <h3 class="newsletter-form__message newsletter-form__message--success" tabindex="-1" autofocus>
                  {{ 'newsletter.success' | t | default: 'Thanks for subscribing!' }}
                </h3>
              {%- elsif form.errors -%}
                <div class="newsletter-form__message newsletter-form__message--error">
                  {{ form.errors | default_errors }}
                </div>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>

    {% comment %} Payment methods and legal {% endcomment %}
    <div class="footer__bottom">
      <div class="footer__bottom-content">
        {%- if section.settings.show_payment_icons -%}
          <div class="footer__payment">
            <span class="footer__payment-label">We accept:</span>
            <div class="payment-icons">
              {%- for type in shop.enabled_payment_types -%}
                {{ type | payment_type_svg_tag: class: 'payment-icon' }}
              {%- endfor -%}
            </div>
          </div>
        {%- endif -%}

        <div class="footer__legal">
          <p>&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. {{ 'layout.footer.copyright' | t | default: 'All rights reserved.' }}</p>
          
          {%- if section.settings.show_policy_links -%}
            <div class="footer__policies">
              {%- for policy in shop.policies -%}
                {%- if policy != blank -%}
                  <a href="{{ policy.url }}" class="footer__policy-link">{{ policy.title }}</a>
                {%- endif -%}
              {%- endfor -%}
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: rgb(var(--color-base-background-2));
    color: rgb(var(--color-base-text));
    padding: 6rem 0 2rem;
    margin-top: 6rem;
  }

  .footer__content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    margin-bottom: 4rem;
  }

  @media screen and (min-width: 750px) {
    .footer__content {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 3rem;
    }
  }

  .footer__section--info {
    grid-column: span 1;
  }

  @media screen and (min-width: 990px) {
    .footer__section--info {
      grid-column: span 2;
    }
  }

  .footer__logo {
    max-width: 20rem;
    height: auto;
    margin-bottom: 2rem;
  }

  .footer__title {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 2rem;
    color: rgb(var(--color-base-text));
  }

  .footer__description {
    font-size: 1.5rem;
    line-height: 1.6;
    color: rgba(var(--color-base-text), 0.8);
    margin-bottom: 2rem;
  }

  .footer__social h4 {
    font-size: 1.6rem;
    margin-bottom: 1.5rem;
    color: rgb(var(--color-base-text));
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 4rem;
    height: 4rem;
    background: rgba(var(--color-base-text), 0.1);
    border-radius: 50%;
    color: rgb(var(--color-base-text));
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .social-link:hover {
    background: rgb(var(--color-base-accent-1));
    color: rgb(var(--color-base-solid-button-labels));
    transform: translateY(-2px);
  }

  .footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__links li {
    margin-bottom: 1rem;
  }

  .footer__link {
    color: rgba(var(--color-base-text), 0.8);
    text-decoration: none;
    font-size: 1.5rem;
    transition: color 0.2s ease;
    display: block;
    padding: 0.5rem 0;
  }

  .footer__link:hover {
    color: rgb(var(--color-base-accent-1));
  }

  .footer__text {
    font-size: 1.5rem;
    line-height: 1.6;
    color: rgba(var(--color-base-text), 0.8);
  }

  .footer__newsletter-text {
    font-size: 1.5rem;
    color: rgba(var(--color-base-text), 0.8);
    margin-bottom: 2rem;
    line-height: 1.5;
  }

  .newsletter-form {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .newsletter-form__input {
    flex: 1;
    padding: 1.2rem 1.5rem;
    border: 1px solid rgba(var(--color-base-text), 0.2);
    border-radius: var(--inputs-radius);
    background: rgb(var(--color-base-background-1));
    color: rgb(var(--color-base-text));
    font-size: 1.5rem;
  }

  .newsletter-form__input:focus {
    outline: none;
    border-color: rgb(var(--color-base-accent-1));
  }

  .newsletter-form__button {
    padding: 1.2rem 2rem;
    white-space: nowrap;
  }

  .newsletter-form__message {
    font-size: 1.4rem;
    margin-top: 1rem;
  }

  .newsletter-form__message--success {
    color: #27ae60;
  }

  .newsletter-form__message--error {
    color: #e74c3c;
  }

  .footer__bottom {
    border-top: 1px solid rgba(var(--color-base-text), 0.1);
    padding-top: 3rem;
  }

  .footer__bottom-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
    text-align: center;
  }

  @media screen and (min-width: 750px) {
    .footer__bottom-content {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }

  .footer__payment {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .footer__payment-label {
    font-size: 1.4rem;
    color: rgba(var(--color-base-text), 0.7);
  }

  .payment-icons {
    display: flex;
    gap: 0.8rem;
    flex-wrap: wrap;
  }

  .payment-icon {
    height: 2.4rem;
    width: auto;
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .payment-icon:hover {
    opacity: 1;
  }

  .footer__legal {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  @media screen and (min-width: 750px) {
    .footer__legal {
      align-items: flex-end;
      text-align: right;
    }
  }

  .footer__legal p {
    font-size: 1.4rem;
    color: rgba(var(--color-base-text), 0.6);
    margin: 0;
  }

  .footer__policies {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .footer__policy-link {
    font-size: 1.3rem;
    color: rgba(var(--color-base-text), 0.6);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer__policy-link:hover {
    color: rgb(var(--color-base-accent-1));
  }

  @media screen and (max-width: 749px) {
    .newsletter-form {
      flex-direction: column;
    }

    .newsletter-form__button {
      width: 100%;
    }

    .footer__policies {
      justify-content: center;
    }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "header",
      "content": "Store Information"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Footer logo"
    },
    {
      "type": "textarea",
      "id": "description",
      "default": "Step into style with our premium collection of footwear. From casual sneakers to formal dress shoes, we have the perfect pair for every occasion.",
      "label": "Store description"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "default": true,
      "label": "Show social media links"
    },
    {
      "type": "header",
      "content": "Footer Bottom"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "default": true,
      "label": "Show payment icons"
    },
    {
      "type": "checkbox",
      "id": "show_policy_links",
      "default": true,
      "label": "Show policy links"
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Link list",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Quick links",
          "label": "Heading"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "subtext",
          "default": "<p>Share contact information, store details, and brand content with your customers.</p>",
          "label": "Text"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter signup",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Subscribe to our emails",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "subtext",
          "default": "Be the first to know about new collections and exclusive offers.",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "button_text",
          "default": "Subscribe",
          "label": "Button text"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "link_list"
      },
      {
        "type": "text"
      },
      {
        "type": "newsletter"
      }
    ]
  }
}
{% endschema %}
