{% comment %}
  Footer section for the shoe store theme
{% endcomment %}

<footer class="footer section" role="contentinfo">
  <div class="page-width">
    <div class="footer__content">
      
      {% comment %} Store info {% endcomment %}
      <div class="footer__section footer__section--info">
        {%- if section.settings.logo -%}
          <img src="{{ section.settings.logo | image_url: width: 200 }}" 
               alt="{{ shop.name }}"
               loading="lazy"
               class="footer__logo">
        {%- else -%}
          <h3 class="footer__title">{{ shop.name }}</h3>
        {%- endif -%}
        
        {%- if section.settings.description != blank -%}
          <p class="footer__description">{{ section.settings.description }}</p>
        {%- endif -%}

        {%- if section.settings.show_social -%}
          <div class="footer__social">
            <h4>Follow Us</h4>
            <div class="social-links">
              {%- if settings.social_facebook_link != blank -%}
                <a href="{{ settings.social_facebook_link }}" 
                   target="_blank" 
                   rel="noopener noreferrer"
